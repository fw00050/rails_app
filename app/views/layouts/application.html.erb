  <body>
    <div class="container">
      <header>
        <%= image_tag("logo.png", :alt => "Sample App", :class => "round") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", '#' %></li>
            <li><%= link_to "News", '#' %></li>
            <li><%= link_to "Enquiry", '#' %></li>
            <li><%= link_to "Submit", '#' %></li>
            <li><%= link_to "Survey", '#' %></li>
          </ul>
        </nav>
